---
import { smartypantsu } from "smartypants";

interface Props {
  para: string;
}

let { para } = Astro.props;

const ital_1st = para.startsWith("/");
let i = 0;

if (ital_1st) {
  para = para.substring(1);
  i = 1;
}

const parts: string[] = smartypantsu(para.replace(/`/g, "â€™"), "2").split("/");
---

<>
  {
    parts.map((part) => {
      i++;
      if (part.length == 0) return "/";
      return i % 2 == 1 ? part : <i>{part}</i>;
    })
  }
</>
